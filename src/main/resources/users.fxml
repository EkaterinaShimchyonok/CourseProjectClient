<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" style="-fx-background-color: rgba(144, 238, 144, 0.5); -fx-padding: 20;" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.courseproject.Controllers.UsersController">
    <Text text="Пользователи" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: black;" GridPane.halignment="CENTER"/>

    <HBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER">
        <TextField fx:id="searchField" promptText="Поиск по email,имени или правам администратора" style="-fx-pref-width: 300px;"/>
        <Button text="Найти" onAction="#handleSearchUser" style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>
    </HBox>

    <VBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <TableView fx:id="usersTable" style="-fx-pref-width: 600px;">
            <columns>
                <TableColumn fx:id="emailColumn" text="Email" style="-fx-pref-width: 300px;"/>
                <TableColumn fx:id="nameColumn" text="Имя" style="-fx-pref-width: 200px;"/>
                <TableColumn fx:id="isAdminColumn" text="Администратор" style="-fx-pref-width: 100px;"/>
            </columns>
        </TableView>
    </VBox>

    <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER">
        <Button text="Добавить пользователя" onAction="#handleAddUser" style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>
        <Button text="Изменить пользователя" onAction="#handleEditUser" style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>
        <Button text="Удалить пользователя" onAction="#handleDeleteUser" style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>
    </HBox>
</GridPane>
