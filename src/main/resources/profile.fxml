<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<?import java.lang.String?>
<GridPane alignment="CENTER" style="-fx-background-color: rgba(46, 204, 113, 0.5); -fx-padding: 20;" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.courseproject.Controllers.ProfileController">
    <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false" style="-fx-pref-width: 300px;"/>

    <Label text="Имя:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-width: 300px;"/>

    <Label text="Возраст:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="ageField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-width: 300px;"/>

    <Label text="Пол:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="maleComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-pref-width: 300px;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Мужской"/>
                <String fx:value="Женский"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Рост:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="heightField" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-pref-width: 300px;"/>

    <Label text="Вес:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="weightField" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-pref-width: 300px;"/>

    <Label text="Уровень активности:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <ComboBox fx:id="activityLevelComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-pref-width: 300px;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="1 - Низкий"/>
                <String fx:value="2 - Средний"/>
                <String fx:value="3 - Высокий"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Цель в кг:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="goalField" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-pref-width: 300px;"/>

    <Button text="Применить изменения" onAction="#handleApplyChanges" GridPane.rowIndex="8" GridPane.columnIndex="1" style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>
</GridPane>
