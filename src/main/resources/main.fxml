<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.courseproject.Controllers.MainController">
    <!-- Боковое меню -->
    <left>
        <VBox spacing="10.0" alignment="TOP_LEFT" style="-fx-background-color: #2ECC71;">
            <padding>
                <Insets top="10.0" right="10.0" bottom="20.0" left="10.0"/>
            </padding>
            <Button onAction="#handleLogout" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 200px;">Выйти из аккаунта</Button>
            <Button onAction="#handleProfile" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 200px;">Личный кабинет</Button>
            <Button onAction="#handlePlan" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 200px;">План питания</Button>
            <Button onAction="#handleStats" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 200px;">Моя статистика</Button>
            <Button onAction="#handleUsers" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 200px;">Пользователи</Button>
            <Button onAction="#handleProducts" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 200px;">Управление продуктами</Button>
        </VBox>
    </left>

    <!-- Логотип -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #2ECC71;">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="HiFood" style="-fx-font-family: 'Brush Script MT', cursive; -fx-font-size: 36px; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #000, 5, 0, 0, 1);"/>
        </HBox>
    </top>

    <!-- Основное содержимое -->
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <HBox alignment="CENTER" spacing="20.0">
                <Label fx:id="contentLabel" text="Добро пожаловать!" style="-fx-font-size: 24px;"/>
            </HBox>
            <VBox alignment="CENTER" spacing="10.0">
                <HBox spacing="10.0" alignment="CENTER">
                    <Label text="Email:"/>
                    <TextField fx:id="emailField" editable="false" />
                </HBox>
                <HBox spacing="10.0" alignment="CENTER">
                    <Label text="Name:"/>
                    <TextField fx:id="nameField" />
                </HBox>
                <HBox spacing="10.0" alignment="CENTER">
                    <Label text="Age:"/>
                    <TextField fx:id="ageField" />
                </HBox>
                <Button text="Применить изменения" onAction="#handleApplyChanges" style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
