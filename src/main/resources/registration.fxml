<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" style="-fx-background-color: rgba(144, 238, 144, 0.5);" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.courseproject.Controllers.RegisterController">
    <children>
        <Label fx:id="responseLabel" />
        <TextField fx:id="emailInput" promptText="Email"/>
        <PasswordField fx:id="passwordInput" promptText="Password"/>
        <Button text="Зарегистрироваться" onAction="#handleRegister" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 200px;"/>
        <Button id="logoutButton"  text="Назад" onAction="#handleBack" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 200px;"/> <!-- Изменение: Кнопка "Назад" -->
    </children>
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
</VBox>
