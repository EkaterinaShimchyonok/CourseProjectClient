<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<GridPane alignment="CENTER" style="-fx-background-color: rgba(144, 238, 144, 0.5); -fx-padding: 20;" hgap="20" vgap="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.courseproject.Controllers.DailyIntakeController">
    <Label fx:id="title" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="3" style="-fx-pref-width: 200px; -fx-font-size: 16px;" GridPane.halignment="CENTER"/>
    <Text  text="Мои суточные нормы" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: black;" GridPane.halignment="CENTER"/>

    <!-- Витамины -->
    <Label text="Витамины" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="vitaminsLabel" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-pref-width: 200px; -fx-font-size: 16px;"/>

    <!-- Минералы -->
    <Label text="Минералы" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="mineralsLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-width: 200px; -fx-font-size: 16px;"/>

    <!-- Макронутриенты -->
    <Label text="Макронутриенты" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="macroNutrientsLabel" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-pref-width: 200px; -fx-font-size: 16px;"/>
</GridPane>
